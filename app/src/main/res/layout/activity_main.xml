<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.SR71.Copter.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="364dp"
        android:layout_height="372dp"
        android:layout_above="@+id/btn_detect_faces"
        android:layout_marginBottom="67dp" />

    <Button
        android:id="@+id/btn_detect_faces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Detect Faces" />

    <Button
        android:id="@+id/slct_button"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_detect_faces"
        android:layout_alignParentEnd="true"
        android:onClick="onClickBtn"
        android:text="Select" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_detect_faces"
        android:layout_alignParentStart="true"
        android:text="@string/button" />

    <Button
        android:id="@+id/shoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slct_button"
        android:layout_centerHorizontal="true"
        android:onClick="onClickBtn2"
        android:text="Shutter" />

</RelativeLayout>
